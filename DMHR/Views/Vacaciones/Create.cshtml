@model DMHR.Models.Vacacion

@{
    ViewData["Title"] = "Crear registro de vacacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h2 class="login-logo">@ViewData["Title"]</h2>
    <ol class="breadcrumb">
        <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="glyphicon glyphicon-home"></i><span>Inicio</span> </a></li>
        <li> <a class="" asp-area="" asp-page="/Vacaciones/Create"><i class="glyphicon glyphicon-th"></i><span>Procesos</span></a></li>
        <li> <a class="" asp-area="" asp-page="/Vacaciones/Create"><span>Vacacion</span></a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Vacacion</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="box-body">
                        <div class="form-group">
                            <label asp-for="EmpleadoId" class="control-label"></label>
                            <div class="selection">
                                @Html.DropDownListFor(model => model.EmpleadoId,(SelectList)ViewBag.Empleados,
                               "Seleccione",
                               new { @class = "form-control" } )
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Desde" class="control-label"></label>
                            <div class="input-group">
                                <input asp-for="Desde" type="date" placeholder="Desde" class="form-control" />
                                <div class="input-group-addon"><div class="fa fa-calendar"></div> </div>
                            </div>
                            <span asp-validation-for="Desde" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Hasta" class="control-label"></label>
                            <div class="input-group">

                                <input asp-for="Hasta" type="date" placeholder="Hasta" class="form-control" />
                                <div class="input-group-addon"><div class="fa fa-calendar"></div> </div>
                            </div>
                            <span asp-validation-for="Hasta" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Año" class="control-label"></label>
                            <input asp-for="Año" type="number" min="1900" max="9999" placeholder="Año" class="form-control" />
                            <span asp-validation-for="Año" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Comentarios" class="control-label"></label>
                            <input asp-for="Comentarios" type="text" placeholder="Comentario" class="form-control" />
                            <span asp-validation-for="Comentarios" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="checkbox">
                                <label class="bg-danger danger">
                                    <input asp-for="IsPaid" type="checkbox" />
                                    Son <b>Pagas</b>?
                                </label>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


