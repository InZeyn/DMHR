@model IEnumerable<DMHR.Models.Vacacion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h2>Vacaciones</h2>

    <p>
        <a asp-action="Create">Agregar Vacaciones</a>
    </p>
</section>

<section class="content container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Lista de Vacaciones</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search" />
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-body table table-striped ">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Desde)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Hasta)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Comentarios)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsPaid)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Empleado)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <i class=" fa fa-calendar">

                                            @Html.DisplayFor(modelItem => item.Desde)
                                            </i>
                                    </td>
                                    <td>
                                        <i class=" fa fa-calendar">
                                            @Html.DisplayFor(modelItem => item.Hasta)
                                            </i>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Comentarios)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsPaid)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Empleado.Apellido)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.VacacionId">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.VacacionId">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.VacacionId">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</section>