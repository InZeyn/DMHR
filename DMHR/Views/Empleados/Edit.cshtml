@model DMHR.Models.Empleado

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h2 class="login-logo">@ViewData["Title"]</h2>
    <ol class="breadcrumb">
        <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="glyphicon glyphicon-home"></i><span>Home</span> </a></li>
        <li> <a class="" asp-area="" asp-page="/Empleados/Edit"><i class="glyphicon glyphicon-th-large"></i><span>Informes</span></a></li>
        <li><a asp-action="Index">Empleados</a></li>
        <li> <a class="" asp-area="" asp-page="/Empleados/Edit"><span>Editar</span></a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Empleado</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="box-body">
                        <input type="hidden" asp-for="EmpleadoId" />
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" type="text" placeholder="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Apellido" class="control-label"></label>
                            <input asp-for="Apellido" type="text" placeholder="Apellido" class="form-control" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefono" class="control-label"></label>
                            <div class=" input-group">

                                <input asp-for="Telefono" class="form-control" placeholder="Telefono" />

                                <div class="input-group-addon">
                                    <div class="fa fa-phone"></div>
                                </div>
                            </div>
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <hr />
                        <div class="form-group">
                            <label asp-for="CodigoEmpleado" class="control-label"></label>
                            <input asp-for="CodigoEmpleado" type="number" min="1" class="form-control" />
                            <span asp-validation-for="CodigoEmpleado" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FechaIngreso" class="control-label"></label>
                            <div class="input-group">

                                <input asp-for="FechaIngreso" type="date" placeholder="Fecha de Ingreso" class="form-control" />
                                <div class="input-group-addon"><div class="fa fa-calendar"></div> </div>
                            </div>

                            <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Salario" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-addon">$</span>
                                <input asp-for="Salario" type="number" min="0" class="form-control" />
                                <span class="input-group-addon"><b>.00</b></span>
                            </div>
                            <span asp-validation-for="Salario" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label class="bg-danger danger">
                                    <input asp-for="IsActive" type="checkbox" checked="checked" />
                                    Este usuario es <b>Activo</b>?
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="CargoNombre" class="control-label"></label>
                                    <div class="selection">
                                        @Html.DropDownListFor(model => model.CargoNombre,(SelectList)ViewBag.Cargos,
                                       "Seleccione",
                                       new { @class = "form-control" } )
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DepartamentoNombre" class="control-label"></label>
                                    @Html.DropDownListFor(model => model.DepartamentoNombre,(SelectList)ViewBag.Departamentos,
                                    "Seleccione",
                                    new { @class = "form-control" })
                                    <span asp-validation-for="DepartamentoNombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
</div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" value="Save" class="btn btn-primary">Guardar</button>
                        <hr />
                        <a asp-action="Index">Cancelar</a>
                    </div>
                </form>
        </div>
        </div>
    </div>
</section>
