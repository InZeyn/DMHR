@model IEnumerable<Empleado>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var getPermiso = false;
    var getVacacion = false;
    var getLicencia = false;
}

<!-- Main content -->
<form asp-action="Permisos">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="selection">
            @Html.DropDownList("EmpleadoId",(SelectList)ViewBag.Empleados,
           "Seleccione",
           new { @class = "form-control" } )
        </div>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label class="">
                <input asp-for="@getPermiso" type="checkbox" />
                Permisos
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label class="">
                <input asp-for="@getVacacion" type="checkbox" />
                Vacaciones
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label class="">
                <input asp-for="@getLicencia" type="checkbox" />
                Licencias
            </label>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="submit" class="btn btn-default" />
    </div>
</form>
<hr />
<section class="content container-fluid">
    @if (ViewBag.Permisos == null)
    {
    }
    else
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Permisos</h3>
                    </div>
                    <div class="box-body table table-striped ">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Desde
                                    </th>
                                    <th>
                                        Hasta
                                    </th>
                                    <th>
                                        Comentarios
                                    </th>
                                    <th>
                                        Pago
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var item in ViewBag.Permisos)
                                {
                                <tr>
                                    <td>
                                        @item.Desde
                                    </td>
                                    <td>
                                        @item.Hasta
                                    </td>
                                    <td>
                                        @item.Comentarios
                                    </td>
                                    <td>
                                        @item.IsPaid
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">

                    </div>
                </div>
            </div>
        </div>
    }
   @if (ViewBag.Vacaciones == null)
    {
    }
    else
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Vacaciones</h3>
                    </div>
                    <div class="box-body table table-striped ">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Desde
                                    </th>
                                    <th>
                                       Hasta
                                    </th>
                                    <th>
                                        Año
                                    </th>
                                    <th>
                                        Comentarios
                                    </th>
                                    <th>
                                        Pago
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var item in ViewBag.Vacaciones)
                                {
                                <tr>
                                    <td>
                                        @item.Desde
                                    </td>
                                    <td>
                                        @item.Hasta
                                    </td>
                                    <td>
                                        @item.Año
                                    </td>
                                    <td>
                                        @item.Comentarios
                                    </td>
                                    <td>
                                        @item.IsPaid
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">

                    </div>
                </div>
            </div>
        </div>
    }
   @if (ViewBag.Licencias == null)
    {
    }
    else
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Licencias</h3>
                    </div>
                    <div class="box-body table table-striped ">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Desde
                                    </th>
                                    <th>
                                        Hasta
                                    </th>
                                    <th>
                                       Motivo
                                    </th>
                                    <th>
                                        Comentarios
                                    </th>
                                    <th>
                                        Pago
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var item in ViewBag.Licencias)
                                {
                                <tr>
                                    <td>
                                      @item.Desde
                                    </td>
                                    <td>
                                        @item.Hasta
                                    </td>
                                    <td>
                                        @item.Motivo
                                    </td>
                                    <td>
                                        @item.Comentarios
                                    </td>
                                    <td>
                                        @item.IsPaid
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">

                    </div>
                </div>
            </div>
        </div>
    }
</section>
