@model IEnumerable<Empleado>

@{
    ViewData["Title"] = "Lista de Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<section class="content-header">
    <h2 class="login-logo">@ViewData["Title"]</h2>
    <ol class="breadcrumb">
        <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="glyphicon glyphicon-home"></i><span>Inicio</span> </a></li>
        <li> <a class="" asp-area="" asp-page="/Empleados"><i class="glyphicon glyphicon-th-large"></i><span>Informes</span></a></li>
        <li> <a class="" asp-area="" asp-page="/Empleados"><span>Empleados</span></a></li>
    </ol>
</section>
<!-- Main content -->

<section class="content container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Empleados</h3>
                    <div class="box-tools">
                        <form asp-action="Index" method="get">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control pull-right" placeholder="Buscar..." />
                                <div class="input-group-btn">
                                    <button type="submit" value="Search" class="btn btn-default">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form> 
                        
                    </div>
                </div>
                <div class="box-body table table-striped ">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CodigoEmpleado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre) Completo
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CargoNombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DepartamentoNombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </th>
                                <th>
                                    Fecha de Ingreso
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Salario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="fa fa-hashtag">
                                            @Html.DisplayFor(modelItem => item.CodigoEmpleado)
                                        </i>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                        @Html.DisplayFor(modelItem => item.Apellido)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CargoNombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DepartamentoNombre)
                                    </td>
                                    <td>
                                        <i class="fa fa-phone">
                                            @Html.DisplayFor(modelItem => item.Telefono)
                                        </i>
                                    </td>
                                    <td>
                                        <i class=" fa fa-calendar">
                                            @item.FechaIngreso.ToString("dd/MM/yyyy")
                                        </i>

                                    </td>
                                    <td>

                                        <i class="fa fa-dollar">@Html.DisplayFor(modelItem => item.Salario)</i>
                                    </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span class="label label-success">
                                                Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger">
                                                Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="margin">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-default">
                                                    <a asp-action="Details" asp-route-id="@item.EmpleadoId">Detalles</a>
                                                </button>
                                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                    <span class="caret"></span>
                                                    <span class="sr-only">Toggle Dropdown</span>
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li><a asp-action="Edit" asp-route-id="@item.EmpleadoId">Editar</a></li>
                                                    <li><a asp-action="Details" asp-route-id="@item.EmpleadoId">Detalles</a></li>
                                                    <li class="divider"></li>
                                                    <li><a asp-action="Delete" class="bg-red-active " asp-route-id="@item.EmpleadoId">Eliminar</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    
                </div>
            </div>
        </div>
    </div>
</section>
