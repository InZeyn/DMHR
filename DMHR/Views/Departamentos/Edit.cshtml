@model DMHR.Models.Departamento

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h2 class="login-logo">@ViewData["Title"]</h2>
    <ol class="breadcrumb">
        <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="glyphicon glyphicon-home"></i><span>Inicio</span></a></li>
        <li><a class="" asp-area="" asp-page="/Departamentos/Edit"><i class="glyphicon glyphicon-th-large"></i><span>Informes</span></a></li>
        <li><a asp-action="Index">Departamentos</a></li>
        <li><a class="" asp-area="" asp-page="/Cargos/Edit"><span>Editar</span></a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Departamento</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DepartamentoId" />
                    <div class="form-group">
                        <label asp-for="CodigoDepartamento" class="control-label"></label>
                        <input asp-for="CodigoDepartamento" class="form-control" />
                        <span asp-validation-for="CodigoDepartamento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DepartamentoNombre" class="control-label"></label>
                        <input asp-for="DepartamentoNombre" class="form-control" />
                        <span asp-validation-for="DepartamentoNombre" class="text-danger"></span>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" value="Save" class="btn btn-primary">Guardar</button>
                        <hr />
                        <a asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>