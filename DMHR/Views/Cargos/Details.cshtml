@model DMHR.Models.Cargo

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h2 class="login-logo">@ViewData["Title"]</h2>
    <ol class="breadcrumb">
        <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="glyphicon glyphicon-home"></i><span>Inicio</span></a></li>
        <li><a class="" asp-area="" asp-page="/Cargos/Details"><i class="glyphicon glyphicon-th-large"></i><span>Informes</span></a></li>
        <li><a asp-action="Index">Cargos</a></li>
        <li><a class="" asp-area="" asp-page="/Cargos/Details"><span>Detalles</span></a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <div class="">
        <div class="">
            <div class="login-box box-primary">
                <div class="login-logo with-border">
                </div>
                <div class="login-box-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CargoNombre)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.CargoNombre)
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <div class="margin">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default"><a asp-action="Edit" asp-route-id="@Model.CargoId">Editar</a></button>
                            <button type="button" class="btn btn-danger"><a asp-action="Delete" asp-route-id="@Model.CargoId">Eliminar</a></button>
                            <hr />
                            <a asp-action="Index">Regresar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>